 ]
 
-for basename_noext, args in null_tests:
+for test_name, basename_noext, args in null_tests:
+    if basename_noext == None:
+        basename_noext = test_name
     gem5_verify_config(
-        name=basename_noext,
+        name=test_name,
         fixtures=(),
         verifiers=(),
         config=joinpath(config.base_dir, 'configs',
